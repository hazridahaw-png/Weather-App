<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/admin/orders">Daily Dose Admin</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/admin/orders">Orders</a>
                <a class="nav-link" href="/admin/products">Products</a>
                <a class="nav-link active" href="/admin/articles">Articles</a>
                <a class="nav-link" href="/admin/styles">Styles</a>
            </div>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col">
                <h1><%= title %></h1>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" onclick="openArticleModal()">Add New Article</button>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total Articles</h5>
                        <h2><%= totalArticles %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Categories</h5>
                        <h2><%= categories %></h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Article Management</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th>Excerpt</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% articles.forEach(article => { %>
                            <tr>
                                <td><%= article.id %></td>
                                <td><%= article.title %></td>
                                <td><%= article.category %></td>
                                <td><%= new Date(article.date).toLocaleDateString() %></td>
                                <td><%= article.excerpt.substring(0, 50) %>...</td>
                                <td>
                                    <button class="btn btn-sm btn-info" onclick="viewArticleDetails(<%= article.id %>, '<%= article.title.replace(/'/g, "\\'") %>', '<%= article.category %>', '<%= article.excerpt.replace(/'/g, "\\'") %>', '<%= article.content.replace(/'/g, "\\'").replace(/\n/g, "\\n") %>', '<%= article.image %>', '<%= article.date %>')">View</button>
                                    <button class="btn btn-sm btn-warning" onclick="editArticle(<%= article.id %>, '<%= article.title.replace(/'/g, "\\'") %>', '<%= article.category %>', '<%= article.excerpt.replace(/'/g, "\\'") %>', '<%= article.content.replace(/'/g, "\\'").replace(/\n/g, "\\n") %>', '<%= article.image %>', '<%= article.date %>')">Edit</button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteArticle(<%= article.id %>, '<%= article.title.replace(/'/g, "\\'") %>')">Delete</button>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Article View Modal -->
    <div class="modal fade" id="viewArticleModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewArticleModalTitle">Article Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <strong>Title:</strong> <span id="viewArticleTitle"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Category:</strong> <span id="viewArticleCategory"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Date:</strong> <span id="viewArticleDate"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Image:</strong><br>
                        <img id="viewArticleImage" src="" alt="" class="img-fluid mt-2" style="max-height: 200px;">
                    </div>
                    <div class="mb-3">
                        <strong>Excerpt:</strong><br>
                        <p id="viewArticleExcerpt" class="mt-2"></p>
                    </div>
                    <div class="mb-3">
                        <strong>Content:</strong><br>
                        <div id="viewArticleContent" class="mt-2 p-3 bg-light rounded"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Article Modal -->
    <div class="modal fade" id="articleModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="articleModalTitle">Add New Article</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="articleForm">
                    <div class="modal-body">
                        <input type="hidden" id="articleId" name="id">
                        <div class="mb-3">
                            <label for="articleTitle" class="form-label">Title *</label>
                            <input type="text" class="form-control" id="articleTitle" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="articleCategory" class="form-label">Category *</label>
                            <select class="form-control" id="articleCategory" name="category" required>
                                <option value="">Select Category</option>
                                <option value="Fashion">Fashion</option>
                                <option value="Beauty">Beauty</option>
                                <option value="Travel">Travel</option>
                                <option value="Food">Food</option>
                                <option value="Wellness">Wellness</option>
                                <option value="Tech">Tech</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="articleExcerpt" class="form-label">Excerpt *</label>
                            <textarea class="form-control" id="articleExcerpt" name="excerpt" rows="2" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="articleContent" class="form-label">Content *</label>
                            <textarea class="form-control" id="articleContent" name="content" rows="6" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="articleImage" class="form-label">Image URL</label>
                            <input type="url" class="form-control" id="articleImage" name="image">
                        </div>
                        <div class="mb-3">
                            <label for="articleDate" class="form-label">Date *</label>
                            <input type="date" class="form-control" id="articleDate" name="date" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="saveArticleBtn">Save Article</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const articleModal = new bootstrap.Modal(document.getElementById('articleModal'));
        const articleForm = document.getElementById('articleForm');

        function openArticleModal() {
            document.getElementById('articleModalTitle').textContent = 'Add New Article';
            document.getElementById('articleId').value = '';
            articleForm.reset();
            document.getElementById('articleDate').valueAsDate = new Date();
            articleModal.show();
        }

        function editArticle(id, title, category, excerpt, content, image, date) {
            document.getElementById('articleModalTitle').textContent = 'Edit Article';
            document.getElementById('articleId').value = id;
            document.getElementById('articleTitle').value = title;
            document.getElementById('articleCategory').value = category;
            document.getElementById('articleExcerpt').value = excerpt;
            document.getElementById('articleContent').value = content;
            document.getElementById('articleImage').value = image;
            document.getElementById('articleDate').value = date.split('T')[0];
            articleModal.show();
        }

        function viewArticleDetails(id, title, category, excerpt, content, image, date) {
            document.getElementById('viewArticleModalTitle').textContent = title;
            document.getElementById('viewArticleTitle').textContent = title;
            document.getElementById('viewArticleCategory').textContent = category;
            document.getElementById('viewArticleDate').textContent = new Date(date).toLocaleDateString();
            document.getElementById('viewArticleExcerpt').textContent = excerpt;
            document.getElementById('viewArticleContent').innerHTML = content.replace(/\n/g, '<br>');
            
            const imageElement = document.getElementById('viewArticleImage');
            if (image) {
                imageElement.src = image;
                imageElement.style.display = 'block';
            } else {
                imageElement.style.display = 'none';
            }
            
            const viewModal = new bootstrap.Modal(document.getElementById('viewArticleModal'));
            viewModal.show();
        }

        function viewArticle(articleId) {
            // For backward compatibility, redirect to frontend
            window.open(`http://localhost:5173/articles/${articleId}`, '_blank');
        }

        function deleteArticle(articleId, title) {
            if (confirm(`Are you sure you want to delete "${title}"?`)) {
                fetch(`/api/articles/${articleId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting article: ' + data.error);
                    }
                })
                .catch(error => {
                    alert('Error deleting article: ' + error.message);
                });
            }
        }
            
        // Form submission handler
        articleForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(articleForm);
            const articleData = Object.fromEntries(formData);
            const isEdit = articleData.id;
            
            const url = isEdit ? `/api/articles/${articleData.id}` : '/api/articles';
            const method = isEdit ? 'PUT' : 'POST';
            
            fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(articleData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    articleModal.hide();
                    location.reload();
                } else {
                    alert('Error saving article: ' + data.error);
                }
            })
            .catch(error => {
                alert('Error saving article: ' + error.message);
            });
        });
    </script>
</body>
</html>